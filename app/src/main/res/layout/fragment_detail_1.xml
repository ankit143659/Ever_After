<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="20dp"
    android:background="@color/black"
    android:gravity="center_horizontal">

    <TextView
        android:text="Oh hey! Let's start with an intro."
        android:fontFamily="@font/font1"
        android:textSize="22sp"
        android:layout_height="wrap_content" android:layout_width="match_parent"
        android:textStyle="bold"
        android:textColor="@color/white"/>

    <TextView
        android:text="Your first name"
        android:textSize="16sp"
        android:fontFamily="@font/font1"
        android:layout_marginTop="30dp"
        android:layout_height="wrap_content" android:layout_width="match_parent"
        android:textStyle="bold"
        android:textColor="@color/white"/>

    <EditText
        android:id="@+id/etFirstName"
        android:layout_width="match_parent"
        android:singleLine="true"
        android:textCursorDrawable="@drawable/cursor"
       android:layout_marginTop="10dp"
        android:fontFamily="@font/font1"
        android:textSize="16sp"
        android:layout_height="wrap_content"
        android:textColorHint="@color/white"
        android:textColor="@color/white"
        android:hint="Your First Name"
        android:background="@drawable/edittext_bg"
        android:padding="10dp"/>
    <TextView
        android:text="Please enter your name"
        android:textSize="14sp"
        android:layout_marginTop="8dp"
        android:visibility="gone"
        android:fontFamily="@font/font1"
        android:id="@+id/nameError"
        android:drawableStart="@drawable/baseline_error_24"
        android:drawablePadding="8dp"
        android:layout_height="wrap_content" android:layout_width="match_parent"
        android:textColor="#E90505"/>

    <TextView
        android:text="Your Birthday"
        android:textSize="16sp"
        android:layout_marginTop="40dp"
        android:layout_marginBottom="10dp"
        android:fontFamily="@font/font1"
        android:textColor="@color/white"
        android:layout_height="wrap_content" android:layout_width="match_parent"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <EditText
            android:layout_width="80dp"
            android:layout_height="50dp"
            android:hint="DD"
            android:textSize="16sp"
            android:id="@+id/dd"
            android:textCursorDrawable="@drawable/cursor"
            android:fontFamily="@font/font1"
            android:inputType="number"
            android:textColor="@color/white"
            android:maxLength="2"
            android:background="@drawable/edittext_bg"
            android:textColorHint="@color/white"
            android:padding="10dp"/>

        <EditText
            android:layout_width="80dp"
            android:layout_height="50dp"
            android:textColorHint="@color/white"
            android:hint="MM"
            android:id="@+id/mm"
            android:fontFamily="@font/font1"
            android:textCursorDrawable="@drawable/cursor"
            android:inputType="number"
            android:maxLength="2"
            android:textColor="@color/white"
            android:background="@drawable/edittext_bg"
            android:textSize="16sp"
            android:padding="10dp"
            android:layout_marginStart="18dp"/>

        <EditText
            android:layout_width="80dp"
            android:layout_height="50dp"
            android:hint="YY"
            android:id="@+id/yy"
            android:maxLength="4"
            android:textCursorDrawable="@drawable/cursor"
            android:inputType="number"
            android:textColor="@color/white"
            android:textSize="16sp"
            android:fontFamily="@font/font1"
            android:background="@drawable/edittext_bg"
            android:padding="10dp"
            android:textColorHint="@color/white"
            android:layout_marginStart="17dp"/>
    </LinearLayout>
    <TextView
        android:text="Please enter your birthday"
        android:textSize="14sp"
        android:layout_marginTop="8dp"
        android:fontFamily="@font/font1"
        android:id="@+id/dateError"
        android:visibility="gone"
        android:drawableStart="@drawable/baseline_error_24"
        android:drawablePadding="8dp"
        android:layout_height="wrap_content" android:layout_width="match_parent"
        android:textColor="#E90505"/>
</LinearLayout>
