<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#040303">



    <!-- User Name and Age -->

    <!-- Location -->
    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="550dp"
        android:id="@+id/card"
        android:layout_margin="16dp"
        android:layout_marginStart="16dp"
        app:cardCornerRadius="30dp">

        <com.google.android.material.imageview.ShapeableImageView
            android:id="@+id/profile_image"
            android:layout_width="match_parent"
            android:layout_height="550dp"
            android:scaleType="centerCrop"
            android:src="@drawable/tony"/>


        <TextView
            android:id="@+id/user_name_age"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/profile_image"
            android:layout_marginStart="30dp"
            android:layout_marginTop="470dp"
            android:text="Joji , 25"
            android:textColor="@color/black"
            android:textSize="24sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/religion"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/user_name_age"
            android:layout_marginStart="30dp"
            android:layout_marginTop="500dp"
            android:text="Singer"
            android:textColor="@color/black"
            android:textSize="18sp" />

        <TextView
            android:id="@+id/match_percentage"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="87% Match"
            android:textSize="18sp"
            android:textStyle="bold"
            android:textColor="@color/black"
            android:background="@drawable/match_bg"
            android:padding="8dp"
            android:layout_alignParentEnd="true"
            android:layout_margin="15dp"/>

    </androidx.cardview.widget.CardView>
    <!-- Button Container -->
    <RelativeLayout
        android:id="@+id/button_container"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
       android:layout_below="@+id/card"
     android:layout_marginStart="50dp"
        android:layout_marginEnd="50dp"
        android:layout_marginTop="20dp"
        android:gravity="center_horizontal">

        <!-- Dislike Button -->
        <ImageButton
            android:id="@+id/dislike_button"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_alignParentStart="true"
            android:src="@drawable/baseline_close_24"
            app:backgroundTint="@color/black"
            tools:ignore="UseAppTint" />

        <!-- Pause Button -->
        <ImageButton
            android:id="@+id/Detail_Button"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:layout_centerHorizontal="true"
            android:background="@color/black"
            android:src="@drawable/baseline_account_circle_24"
            app:tint="@color/red" />

        <!-- Like Button -->
        <ImageButton
            android:id="@+id/like_button"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_alignParentEnd="true"
            android:src="@drawable/h"
            app:tint="@color/red"
            app:backgroundTint="@color/black"
             />
    </RelativeLayout>
</RelativeLayout>