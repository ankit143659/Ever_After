<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp"
    android:background="#F5F5F5">

    <!-- Profile Card -->
    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="700dp"
        android:layout_margin="20dp"
        app:cardCornerRadius="25dp"
        app:cardElevation="10dp"
        app:cardBackgroundColor="@android:color/white">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <!-- Profile Image with Rounded Corners -->
            <com.google.android.material.imageview.ShapeableImageView
                android:id="@+id/profile_image"
                android:layout_width="match_parent"
                android:layout_height="400dp"
                android:scaleType="centerCrop"
                android:src="@drawable/tony" />

            <!-- Gradient Overlay -->
            <View
                android:layout_width="match_parent"
                android:layout_height="150dp"
                android:layout_alignBottom="@id/profile_image"
                android:background="@drawable/gradient_overlay" />

            <!-- Name and Age -->
            <TextView
                android:id="@+id/profile_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Tony Stark, 27"
                android:textSize="22sp"
                android:textColor="@android:color/white"
                android:textStyle="bold"
                android:layout_marginBottom="10dp"
                android:layout_alignBottom="@id/profile_image"
                android:layout_marginStart="20dp" />


            <!-- Match Percentage -->
            <TextView
                android:id="@+id/Communitity"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/profile_name"
                android:layout_margin="15dp"
                android:layout_marginStart="15dp"
                android:layout_marginTop="33dp"
                android:layout_marginEnd="207dp"
                android:layout_marginBottom="15dp"
                android:background="@drawable/match_bg"
                android:padding="8dp"
                android:text="87% Match"
                android:textColor="@color/black"
                android:textSize="18sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/match_percentage"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="87% Match"
                android:textSize="18sp"
                android:textStyle="bold"
                android:textColor="@color/black"
                android:background="@drawable/match_bg"
                android:padding="8dp"
                android:layout_alignParentEnd="true"
                android:layout_margin="15dp"/>

            <HorizontalScrollView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:overScrollMode="never"
                android:layout_below="@id/Communitity"
                android:id="@+id/in"
                android:scrollbars="none">

                <LinearLayout
                    android:id="@+id/interestsLayout"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal" />
            </HorizontalScrollView>

            <!-- Bottom Button Section -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/in"
                android:layout_marginTop="0dp"
                android:orientation="horizontal"
                android:padding="10dp">

                <!-- Send Request Button -->
                <ImageButton
                    android:id="@+id/Dis_like"
                    android:layout_width="60dp"
                    android:layout_height="60dp"
                    android:backgroundTint="@color/white"
                    android:src="@android:drawable/ic_menu_close_clear_cancel"
                    android:visibility="visible" />

                <Button
                    android:id="@+id/send_request_button"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:backgroundTint="@color/red"
                    android:paddingHorizontal="25dp"
                    android:paddingVertical="10dp"
                    android:text="Send Request"
                    android:textColor="@android:color/white"
                    android:textSize="16sp" />

                <!-- Chat Button -->
                <ImageButton
                    android:id="@+id/chat_button"
                    android:layout_width="60dp"
                    android:layout_height="60dp"
                    android:layout_marginStart="20dp"
                    android:backgroundTint="@color/red"
                    android:src="@android:drawable/ic_dialog_email"
                    android:visibility="visible" />


            </LinearLayout>
        </RelativeLayout>
    </androidx.cardview.widget.CardView>
</RelativeLayout>
