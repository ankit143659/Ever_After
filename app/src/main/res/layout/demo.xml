<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_margin="10dp"
    android:background="#858080">

    <!-- Profile Card -->
    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="550dp"
        android:layout_margin="20dp"
        android:radius="20dp"
        app:cardElevation="8dp"
        app:cardCornerRadius="25dp"
        app:cardBackgroundColor="@android:color/white">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <!-- Profile Image with Rounded Corners -->
            <com.google.android.material.imageview.ShapeableImageView
                android:id="@+id/profile_image"
                android:layout_width="match_parent"
                android:layout_height="400dp"
                android:scaleType="centerCrop"
                android:src="@drawable/tony" />

            <!-- Gradient Overlay for Better Visibility -->
            <View
                android:layout_width="match_parent"
                android:layout_height="120dp"
                android:layout_alignBottom="@+id/profile_image" />

            <!-- Name and Age -->
            <TextView
                android:id="@+id/profile_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Tony Stark, 27"
                android:textSize="22sp"
                android:textColor="@color/black"
                android:textStyle="bold"
                android:layout_marginBottom="20dp"
                android:layout_alignBottom="@+id/profile_image"
                android:layout_marginStart="20dp"/>

            <!-- Location -->
            <TextView
                android:id="@+id/profile_location"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Surat, Katargam"
                android:textColor="@color/black"
                android:textSize="16sp"
                android:layout_below="@id/profile_name"
                android:layout_marginStart="20dp"
                android:layout_marginTop="4dp" />

            <!-- Interests Section -->
            <LinearLayout
                android:id="@+id/interests_layout"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_below="@id/profile_location"
                android:layout_marginStart="17dp"
                android:layout_marginTop="10dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="8dp"
                    android:background="@drawable/tag_bg"
                    android:padding="8dp"
                    android:text="Photography"
                    android:textColor="@android:color/white"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Travel"
                    android:textColor="@android:color/white"
                    android:background="@drawable/tag_bg"
                    android:padding="8dp"
                    android:layout_marginEnd="8dp"/>
            </LinearLayout>

        </RelativeLayout>
    </androidx.cardview.widget.CardView>

    <!-- Bottom Button Section -->
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:padding="20dp">

        <!-- Send Request Button -->
        <Button
            android:id="@+id/send_request_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Send Request"
            android:textSize="16sp"
            android:backgroundTint="@color/red"
            android:textColor="@android:color/white"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="10dp"/>

        <!-- Like Button -->
        <ImageButton
            android:id="@+id/like_button"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:src="@drawable/h"
            android:background="@android:color/transparent"
            android:layout_alignParentEnd="true"/>
    </RelativeLayout>

</RelativeLayout>
