<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/black">

    <!-- Shimmer Effect Wrapper -->
    <com.facebook.shimmer.ShimmerFrameLayout
        android:id="@+id/shimmerLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:shimmer_auto_start="true"
        android:visibility="visible"
        app:shimmer_duration="1000">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center_horizontal"
            android:padding="16dp">

            <!-- Profile Image Placeholder -->
            <View
                android:layout_width="120dp"
                android:layout_height="120dp"
                android:background="@android:color/darker_gray"
                android:layout_gravity="center"
                android:layout_marginBottom="16dp"
                android:shape="oval"/>

            <!-- Name Placeholder -->
            <View
                android:layout_width="200dp"
                android:layout_height="24dp"
                android:background="@android:color/darker_gray"
                android:layout_marginBottom="12dp"/>

            <!-- Other placeholders -->
            <View
                android:layout_width="match_parent"
                android:layout_height="16dp"
                android:background="@android:color/darker_gray"
                android:layout_marginBottom="8dp"/>
            <View
                android:layout_width="match_parent"
                android:layout_height="16dp"
                android:background="@android:color/darker_gray"
                android:layout_marginBottom="8dp"/>
        </LinearLayout>
    </com.facebook.shimmer.ShimmerFrameLayout>

    <!-- Profile Content -->
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:visibility="gone"
        android:layout_marginTop="20dp"
        android:id="@+id/detail">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/black"
            android:orientation="vertical"
            android:paddingBottom="24dp">

            <RelativeLayout
                android:layout_width="120dp"
                android:layout_height="120dp"
                android:layout_marginTop="30dp"
                android:layout_gravity="center"
                android:layout_marginBottom="16dp">

                <androidx.cardview.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    app:cardCornerRadius="60dp"
                    android:id="@+id/card"
                    app:cardElevation="8dp"
                    android:background="@android:color/transparent">

                    <ImageView
                        android:id="@+id/profileImageView"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:scaleType="centerCrop"
                        android:src="@drawable/logo"
                        android:clipToOutline="true"
                        android:background="@drawable/circle_bg2" />
                </androidx.cardview.widget.CardView>


            </RelativeLayout>

            <!-- User Name -->
            <TextView
                android:id="@+id/nameTextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:text="Aryan Singh"
                android:textSize="24sp"
                android:textStyle="bold"
                android:textColor="@color/red"
                android:layout_marginBottom="8dp"/>


            <!-- Divider -->


            <View
                android:layout_width="120dp"
                android:layout_height="2dp"
                android:background="@color/red"
                android:layout_gravity="center"
                android:layout_marginBottom="16dp"/>

            <!-- Info Section -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="16dp"
                android:layout_margin="10dp"
                android:background="@drawable/glass_morphism_bg"
                android:layout_marginBottom="16dp">
                <TextView
                    android:id="@+id/frd"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:visibility="gone"
                    android:text="Already Friend"
                    android:textSize="24sp"
                    android:textStyle="bold"
                    android:textColor="@color/red"
                    android:layout_marginBottom="8dp"/>


                <TextView
                    android:id="@+id/emailTextView"
                    style="@style/ProfileInfoText"
                    android:text="ðŸ“§ aryan@example.com"/>

                <TextView
                    android:id="@+id/phoneTextView"
                    style="@style/ProfileInfoText"
                    android:text="ðŸ“ž +91 9876543210"/>

                <TextView
                    android:id="@+id/dobTextView"
                    style="@style/ProfileInfoText"
                    android:text="ðŸŽ‚ 03/06/2003"/>

                <TextView
                    android:id="@+id/genderTextView"
                    style="@style/ProfileInfoText"
                    android:text="ðŸ‘¤ Man"/>

                <TextView
                    android:id="@+id/heightTextView"
                    style="@style/ProfileInfoText"
                    android:text="ðŸ“ 105 cm"/>
            </LinearLayout>

            <!-- Interests Section -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="16dp"
                android:layout_margin="10dp"
                android:background="@drawable/glass_morphism_bg"
                android:layout_marginBottom="16dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Interests"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    android:textColor="@color/black"
                    android:layout_marginBottom="8dp"/>

                <TextView
                    android:id="@+id/interestsTextView"
                    style="@style/ProfileInfoText"
                    android:text="ðŸ–Œï¸ Crafts, ðŸŽ­ Art, ðŸ’ƒ Dancing"/>

                <TextView
                    android:id="@+id/communitiesTextView"
                    style="@style/ProfileInfoText"
                    android:text="ðŸŒ Environmentalism"/>
            </LinearLayout>

            <!-- Lifestyle Section -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="16dp"
                android:layout_margin="10dp"
                android:background="@drawable/glass_morphism_bg"
                android:layout_marginBottom="16dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Lifestyle"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    android:textColor="@color/black"
                    android:layout_marginBottom="8dp"/>

                <TextView
                    android:id="@+id/drinkingStatusTextView"
                    style="@style/ProfileInfoText"
                    android:text="ðŸ· I drink sometimes"/>

                <TextView
                    android:id="@+id/smokingStatusTextView"
                    style="@style/ProfileInfoText"
                    android:text="ðŸš¬ I smoke sometimes"/>
            </LinearLayout>

            <!-- Preferences Section -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_margin="10dp"
                android:padding="16dp"
                android:background="@drawable/glass_morphism_bg"
                android:layout_marginBottom="16dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Preferences"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    android:textColor="@color/black"
                    android:layout_marginBottom="8dp"/>

                <TextView
                    android:id="@+id/meetingPersonTextView"
                    style="@style/ProfileInfoText"
                    android:text="ðŸ’‘ Meeting: Man"/>

                <TextView
                    android:id="@+id/purposeTextView"
                    style="@style/ProfileInfoText"
                    android:text="ðŸŽ¯ Purpose: Date"/>
            </LinearLayout>

            <!-- Personal Details Section -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="16dp"
                android:layout_margin="10dp"
                android:background="@drawable/glass_morphism_bg"
                android:layout_marginBottom="16dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Personal Details"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    android:textColor="@color/black"
                    android:layout_marginBottom="8dp"/>

                <TextView
                    android:id="@+id/religionTextView"
                    style="@style/ProfileInfoText"
                    android:text="ðŸ› Hindu"/>

                <TextView
                    android:id="@+id/valuesTextView"
                    style="@style/ProfileInfoText"
                    android:text="ðŸ’– Optimism, Openness, Humor"/>

                <TextView
                    android:id="@+id/haveKidsTextView"
                    style="@style/ProfileInfoText"
                    android:text="ðŸ‘¶ Don't have kids"/>

                <TextView
                    android:id="@+id/interestForKidsTextView"
                    style="@style/ProfileInfoText"
                    android:text="ðŸ§¸ Want kids"/>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:orientation="horizontal">

            <!-- Close Button -->
            <Button
                android:id="@+id/closeButton"
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:text="Close"
                android:layout_weight="1"
                android:textColor="@color/black"
                android:backgroundTint="@color/red"
                android:layout_marginTop="8dp" />
            <Button
                android:id="@+id/RequestBtn"
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:layout_marginTop="8dp"
                android:backgroundTint="@color/red"
                android:text="SendRequest"
                android:textColor="@color/black" />
            </LinearLayout>
        </LinearLayout>
    </ScrollView>
</RelativeLayout>