<layer-list xmlns:android="http://schemas.android.com/apk/res/android">

    <!-- Base layer: Blur will be applied to this in code -->
    <item>
        <shape android:shape="rectangle">
            <solid android:color="@color/gray"/> <!-- Almost transparent -->
            <corners android:radius="16dp"/>
        </shape>
    </item>

    <!-- Glass layer -->
    <item>
        <shape android:shape="rectangle">
            <gradient
                android:startColor="#300D1555"
                android:endColor="#100D1555"
                android:angle="90"/>
            <stroke
                android:width="0.5dp"
                android:color="#60FFFFFF"/>
            <corners android:radius="16dp"/>
        </shape>
    </item>

    <!-- Highlight edge -->
    <item android:top="0.5dp" android:left="0.5dp" android:right="0.5dp">
        <shape android:shape="rectangle">
            <stroke
                android:width="0.5dp"
                android:color="#A0F8F5F5"/> <!-- Top edge highlight -->
            <corners android:radius="16dp"/>
        </shape>
    </item>
</layer-list>