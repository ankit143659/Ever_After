<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">

    <!-- Checked (Filled Black Square) -->
    <item android:state_checked="true">
        <shape android:shape="rectangle">
            <solid android:color="#000000"/>  <!-- Full Black Fill when Selected -->
            <size android:width="24dp" android:height="24dp"/>
            <corners android:radius="4dp"/> <!-- Slightly rounded edges -->
        </shape>
    </item>

    <!-- Unchecked (Transparent with Grey Border) -->
    <item>
        <shape android:shape="rectangle">
            <solid android:color="@android:color/transparent"/>  <!-- Empty Inside -->
            <size android:width="24dp" android:height="24dp"/>
            <corners android:radius="4dp"/>
            <stroke android:width="1.5dp" android:color="#A0A0A0"/> <!-- Grey Border -->
        </shape>
    </item>

</selector>
