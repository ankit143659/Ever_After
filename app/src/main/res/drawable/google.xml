<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_pressed="true">
        <shape>
            <corners android:radius="50dp"/>
            <gradient
                android:angle="90"
                android:startColor="#F6F4F4"
                android:endColor="#B3AFAF"/>
        </shape>
    </item>
    <item>
        <shape>
            <corners android:radius="50dp"/>
            <gradient
                android:angle="270"
                android:startColor="#FBF6F7"
                android:endColor="#A29E9F"/>
        </shape>
    </item>
</selector>